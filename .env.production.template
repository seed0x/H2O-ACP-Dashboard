# Production Environment Configuration
# Copy this file to .env.production and fill in actual values

# Environment
ENVIRONMENT=production

# Postgres
DATABASE_URL=postgresql://postgres:CHANGE_DB_PASSWORD@db:5432/plumbing

# Auth - CHANGE THESE!
ADMIN_PASSWORD=CHANGE_ME_TO_STRONG_PASSWORD
JWT_SECRET=CHANGE_ME_TO_RANDOM_64_CHAR_STRING
JWT_ALGORITHM=HS256

# App settings
API_HOST=0.0.0.0
API_PORT=8000

# CORS - Add your production domain(s)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Alembic
ALEMBIC_DB_URL=${DATABASE_URL}
